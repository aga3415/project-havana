<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp">

    <CheckBox
        style="@style/CustomCheckBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/joinToEventCheckBox"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"

    />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/joinToEventCheckBox"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityAndFieldTextView"
            android:text="PoznaÅ„, Boisko nr 154"
            android:layout_alignParentLeft="true"
        />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityAndFieldTextView"
            android:id="@+id/freeSlotsRelativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/freeSlotsTitleText"

                android:text="@string/freeSlotsTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/freeSlotsTitleText"
                android:id="@+id/freeSlotsValueTextView"
                android:text="15"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/freeSlotsRelativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceTitleTextView"
                android:text="@string/eventPriceTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/priceTitleTextView"
                android:id="@+id/priceValueTextView"
                android:text="15"/>

        </RelativeLayout>




    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView"
            android:text="2015-10-01"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hourTextView"
            android:layout_below="@+id/dateTextView"
            android:text="12:30"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>




</RelativeLayout>