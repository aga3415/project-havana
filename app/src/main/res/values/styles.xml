<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
       <!-- <item name="android:windowNoTitle">true</item> -->
        <!--<item name="android:colorControlNormal">

        </item>

        -->

        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>

        <item name="android:colorControlActivated">
            @color/yellow
        </item>
        <item name="android:colorControlHighlight">
            @color/yellow
        </item>

    </style>

    <style name="CustomCheckBox">
        <item name="android:theme">@style/CheckBoxAppTheme</item>
    </style>

    <style name="CheckBoxAppTheme">
        <item name="android:colorAccent">
            @color/yellow
        </item>
        <item name="android:colorControlNormal">
            @color/black
        </item>
        <item name="android:colorControlHighlight">
            @color/yellow
        </item>
        <item name="android:colorControlActivated">
            @color/yellow
        </item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <!--<item name="android:datePickerStyle">@style/MyDatePickerStyle</item>-->
        <item name="android:colorAccent">@color/yellow</item>
    </style>

    <style name="MyTimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/yellow</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/yellow</item>
        <item name="android:colorAccent">@color/yellow</item>
    </style>

</resources>
